<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:padding="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/ivCall"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/contact_icon_size"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/contact_text_from_icon_margin"
                android:layout_marginRight="@dimen/contact_text_from_icon_margin"
                android:contentDescription="@string/phone"
                android:src="@drawable/call_icon"
                android:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivCall"
                android:layout_toRightOf="@+id/ivCall"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#212121" />

        </RelativeLayout>

        <include layout="@layout/item_divider" />

        <RelativeLayout
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:id="@+id/tvMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivMail"
                android:layout_toRightOf="@+id/ivMail"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#212121" />

            <ImageView
                android:layout_marginEnd="@dimen/contact_text_from_icon_margin"
                android:layout_marginRight="@dimen/contact_text_from_icon_margin"
                android:id="@+id/ivMail"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/contact_icon_size"
                android:contentDescription="@string/email"
                android:src="@drawable/message_icon"
                android:tint="@color/colorPrimary"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <include layout="@layout/item_divider" />

        <RelativeLayout
            android:id="@+id/web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/ivWeb"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/contact_icon_size"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/contact_text_from_icon_margin"
                android:layout_marginRight="@dimen/contact_text_from_icon_margin"
                android:contentDescription="@string/website"
                android:scaleType="centerInside"
                android:src="@drawable/web_icon"
                android:tint="@color/colorPrimary" />


            <TextView
                android:id="@+id/tvWeb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivWeb"
                android:layout_toRightOf="@+id/ivWeb"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#212121" />

        </RelativeLayout>

        <include layout="@layout/item_divider" />

        <RelativeLayout
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/ivLocation"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/contact_icon_size"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/contact_text_from_icon_margin"
                android:layout_marginRight="@dimen/contact_text_from_icon_margin"
                android:contentDescription="@string/location"
                android:src="@drawable/location_icon"
                android:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivLocation"
                android:layout_toRightOf="@+id/ivLocation"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#212121" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>